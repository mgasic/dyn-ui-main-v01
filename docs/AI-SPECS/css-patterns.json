{
	"name": "CSS Patterns Reference",
	"version": "1.0",
	"date": "2025-12-20",
	"description": "Common CSS patterns for design tokens",
	"patterns": {
		"token_reference": {
			"title": "How to reference tokens",
			"correct": [
				"color: var(--dyn-color-primary, #2563eb)",
				"padding: var(--dyn-spacing-md, 0.75rem)"
			],
			"incorrect": [
				"color: #2563eb",
				"padding: 0.75rem"
			]
		},
		"dark_mode": {
			"title": "Dark mode pattern",
			"code": "@media (prefers-color-scheme: dark)",
			"note": "Override tokens only, not properties"
		},
		"responsive": {
			"title": "Responsive pattern",
			"approach": "Mobile first",
			"code": "@media (min-width: 768px)",
			"note": "Use min-width, not max-width"
		},
		"state_variants": {
			"title": "Component states",
			"code": ".button:hover { --dyn-button-bg: var(...) }",
			"note": "Override tokens for states"
		},
		"accessibility": {
			"title": "Accessibility patterns",
			"items": [
				"outline 2px solid",
				"44px min touch target",
				"4.5:1 contrast ratio",
				"reduced motion support",
				"high contrast support"
			],
			"example": "@media (prefers-reduced-motion: reduce)"
		},
		"fallback_3_level": {
			"title": "3-level fallback",
			"pattern": "var(--dyn-button-bg, var(--legacy-button-bg, #2563eb))",
			"levels": [
				"Current token",
				"Legacy token",
				"Hardcoded fallback"
			]
		},
		"css_custom_properties": {
			"title": "CSS custom properties",
			"rules": [
				"Lowercase with hyphens",
				"Define in root",
				"Use var for values",
				"Provide fallback",
				"No hardcode except fallback"
			],
			"example": ":root { --dyn-primary-color: var(--color-primary, #2563eb) }"
		},
		"variant_patterns": {
			"title": "Variant patterns",
			"secondary": {
				"code": ".buttonSecondary { --dyn-button-bg: var(...) }",
				"note": "Tokens only"
			},
			"disabled": {
				"code": ".button:disabled { opacity: 0.5 }",
				"note": "Use opacity"
			}
		},
		"max_lines": {
			"limit": 300,
			"reason": "Readable and maintainable"
		}
	}
}