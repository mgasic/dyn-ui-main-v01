{
  "name": "@dyn-ui/design-tokens",
  "version": "0.1.0",
  "description": "Design tokens for DYN UI component library",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "styles",
    "build"
  ],
  "scripts": {
    "tokens:validate": "node scripts/validate-tokens.js",
    "tokens:build": "npm run tokens:validate && style-dictionary build -c style-dictionary.config.v2.js",
    "tokens:build:old": "style-dictionary build -c style-dictionary.config.js",
    "tokens:watch": "nodemon --watch tokens --exec npm run tokens:build",
    "tokens:clean": "npx rimraf styles/generated build/js build/ts",
    "build": "npm run tokens:clean && npm run tokens:build && rollup -c rollup.config.mjs",
    "build:tokens-only": "npm run tokens:clean && npm run tokens:build",
    "dev": "npm run tokens:watch",
    "test": "vitest run --passWithNoTests"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "catalog:",
    "@rollup/plugin-typescript": "catalog:",
    "chalk": "^4.1.2",
    "nodemon": "catalog:",
    "rollup": "catalog:",
    "style-dictionary": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "css-variables",
    "style-dictionary"
  ],
  "author": "DYN UI Team",
  "license": "MIT"
}
